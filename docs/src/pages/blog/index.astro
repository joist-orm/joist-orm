---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Get all blog posts sorted by date
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => {
  // Extract date from filename (2024-04-13-first-post.md)
  const aDate = a.id.split('-').slice(0, 3).join('-');
  const bDate = b.id.split('-').slice(0, 3).join('-');
  return new Date(bDate).getTime() - new Date(aDate).getTime();
});
---

<Layout title="Joist ORM Blog">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-4xl font-bold mb-8">Joist ORM Blog</h1>
    
    <div class="grid gap-8">
      {sortedPosts.map((post) => (
        <article class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <h2 class="text-2xl font-bold mb-2">
            <a href={`/blog/${post.data.slug || post.id.replace(/^\d{4}-\d{2}-\d{2}-/, '')}`} class="text-blue-600 hover:underline">
              {post.data.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-4">
            {new Date(post.id.split('-').slice(0, 3).join('-')).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
            {post.data.authors && post.data.authors.length > 0 && ` • ${post.data.authors[0].name}`}
          </p>
          <p class="text-gray-700">
            {post.data.description}
          </p>
          <div class="mt-4">
            <a href={`/blog/${post.data.slug || post.id.replace(/^\d{4}-\d{2}-\d{2}-/, '')}`} class="text-blue-600 hover:underline">
              Read more →
            </a>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>