{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitReturns": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "joist-utils": ["../../utils/src"],
      "joist-codegen": ["../../codegen/src"]
    }
  },
  "references": [{ "path": "../utils" }, { "path": "../codegen" }]
}
