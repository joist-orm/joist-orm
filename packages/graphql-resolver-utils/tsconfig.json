{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "joist-orm": ["../../orm/src"],
      "joist-test-utils": ["../../test-utils/src"]
    }
  },
  "references": [{ "path": "../orm" }, { "path": "../test-utils" }]
}
