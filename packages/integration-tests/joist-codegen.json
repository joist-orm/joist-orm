{
  "codegenPlugins": ["joist-graphql-codegen"],
  "contextType": "Context@src/context",
  "entities": {
    "Author": {
      "fields": {
        "initials": { "derived": "sync" },
        "numberOfBooks": { "derived": "async" },
        "softDropLegacyFk": { "softDrop": true },
        "softDropUsedToBeUseful": { "softDrop": true },
        "wasEverPopular": { "protected": true }
      },
      "tag": "a"
    },
    "Book": { "tag": "b" },
    "BookAdvance": { "tag": "ba" },
    "BookReview": { "fields": { "isPublic": { "derived": "async" } }, "tag": "br" },
    "Critic": {
      "fields": {
        "favouriteBook": { "softDrop": true },
        "tags": { "softDrop": true },
        "worstBook": { "softDrop": true }
      },
      "tag": "c"
    },
    "Image": { "tag": "i" },
    "Publisher": { "tag": "p" },
    "Tag": { "tag": "t" }
  },
  "entitiesDirectory": "./src/entities"
}
