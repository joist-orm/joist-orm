{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "types": ["jest", "node", "bun-types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "joist-codegen": ["../codegen"],
      "joist-graphql-codegen": ["../graphql-codegen"],
      "joist-migration-utils": ["../migration-utils"],
      "joist-test-utils": ["../test-utils"],
      "joist-orm": ["../orm"],
      "joist-utils": ["../utils"],
      "@src/*": ["src/*"]
    }
  },
  "references": [
    { "path": "../codegen" },
    { "path": "../graphql-codegen" },
    { "path": "../migration-utils" },
    { "path": "../orm" },
    { "path": "../utils" },
    { "path": "../test-utils" }
  ]
}
