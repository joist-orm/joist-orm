{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "strict": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "joist-codegen": ["../codegen/src"],
      "joist-graphql-codegen": ["../graphql-codegen/src"],
      "joist-migration-utils": ["../migration-utils/src"],
      "joist-orm": ["../orm/src"],
      "joist-utils": ["../utils/src"],
      "@src/*": ["src/*"]
    }
  },
  "references": [
    { "path": "../codegen" },
    { "path": "../graphql-codegen" },
    { "path": "../migration-utils" },
    { "path": "../orm" },
    { "path": "../utils" }
  ]
}
