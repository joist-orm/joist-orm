{
  "name": "joist-orm",
  "version": "1.294.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joist-orm/joist-orm.git",
    "directory": "packages/orm"
  },
  "engines": {
    "node": "^12.17.0 || ^13.10.0 || ^14 || >= 16.0.0 < 16.2.0 || >= 16.3.0"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "typesVersions": {
    "*": {
      "pg": [
        "build/postgres-driver.d.ts"
      ],
      "codegen": [
        "build/codegen.d.ts"
      ],
      "pg-migrate": [
        "build/pg-migrate.d.ts"
      ],
      "graphql": [
        "build/graphql-export.d.ts"
      ],
      "graphql-codegen": [
        "build/graphql-codegen-export.d.ts"
      ],
      "tests": [
        "build/tests-export.d.ts"
      ],
      "knex": [
        "build/knex-export.d.ts"
      ]
    }
  },
  "bin": {
    "joist-codegen": "./build/codegen.js",
    "joist-pg-migrate": "./build/pg-migrate.js"
  },
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    },
    "./codegen": {
      "types": "./build/codegen.d.ts",
      "default": "./build/codegen.js"
    },
    "./pg-migrate": {
      "types": "./build/pg-migrate.d.ts",
      "default": "./build/pg-migrate.js"
    },
    "./graphql": {
      "types": "./build/graphql-export.d.ts",
      "default": "./build/graphql-export.js"
    },
    "./graphql-codegen": {
      "types": "./build/graphql-codegen-export.d.ts",
      "default": "./build/graphql-codegen-export.js"
    },
    "./tests": {
      "types": "./build/tests-export.d.ts",
      "default": "./build/tests-export.js"
    },
    "./knex": {
      "types": "./build/knex-export.d.ts",
      "default": "./build/knex-export.js"
    },
    "./pg": {
      "types": "./build/postgres-driver.d.ts",
      "default": "./build/postgres-driver.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --ignore-path ../../.prettierignore  --write '{schema,migrations,src}/**/*.{ts,js,tsx,jsx,graphql}'"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "joist-codegen": "workspace:*",
    "joist-core": "workspace:*",
    "joist-graphql-codegen": "workspace:*",
    "joist-graphql-resolver-utils": "workspace:*",
    "joist-knex": "workspace:*",
    "joist-migration-utils": "workspace:*",
    "joist-test-utils": "workspace:*",
    "joist-utils": "workspace:*"
  },
  "peerDependencies": {
    "knex": "^3.1.0",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.16.3",
    "pg-types": "^4.1.0",
    "postgres-array": "^3.0.4"
  },
  "peerDependenciesMeta": {
    "knex": {
      "optional": true
    },
    "node-pg-migrate": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "postgres-array": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/pg": "^8.15.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.2"
  }
}
