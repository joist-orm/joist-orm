{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "joist-utils": ["../utils"]
    }
  },
  "include": ["./src"],
  "references": [{ "path": "../utils" }]
}
