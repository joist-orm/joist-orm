{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "types": ["bun-types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./"
  },
  "references": [
    { "path": "../../codegen" },
    { "path": "../../graphql-codegen" },
    { "path": "../../migration-utils" },
    { "path": "../../orm" },
    { "path": "../../utils" },
    { "path": "../../test-utils" }
  ]
}
