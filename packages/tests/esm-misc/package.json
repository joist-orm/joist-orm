    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "jest": "30.0.5",
    "jest-junit": "^16.0.0",
    "joist-codegen": "workspace:*",
    "joist-migration-utils": "workspace:*",
    "joist-test-utils": "workspace:*",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "superstruct": "0.15.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.8.3"
