{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "types": ["node"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "verbatimModuleSyntax": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./"
  },
  "references": [
    { "path": "../../codegen" },
    { "path": "../../graphql-codegen" },
    { "path": "../../migration-utils" },
    { "path": "../../orm" },
    { "path": "../../utils" },
    { "path": "../../test-utils" }
  ]
}
