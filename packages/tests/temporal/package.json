    "@swc/core": "^1.11.22",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "jest": "30.0.0-alpha.7",
    "jest-junit": "^16.0.0",
    "joist-codegen": "workspace:*",
    "joist-migration-utils": "workspace:*",
    "joist-test-utils": "workspace:*",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "superstruct": "0.15.5",
